{
  "name": "@settler/edge-node",
  "version": "1.0.0",
  "description": "Settler Edge Node - Local reconciliation engine with AI capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "settler-edge": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "npm run typecheck",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@settler/types": "*",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "settler",
    "edge",
    "ai",
    "reconciliation",
    "local-processing"
  ],
  "license": "MIT"
}
