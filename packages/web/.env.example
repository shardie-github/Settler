# Site Configuration
NEXT_PUBLIC_SITE_URL=https://settler.dev

# Analytics Configuration
# Comma-separated list: vercel,ga4,posthog,custom,none
NEXT_PUBLIC_ANALYTICS_PROVIDERS=vercel

# Google Analytics 4
NEXT_PUBLIC_GA4_MEASUREMENT_ID=

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Custom Analytics Endpoint
NEXT_PUBLIC_ANALYTICS_ENDPOINT=
NEXT_PUBLIC_ANALYTICS_TOKEN=

# Error Reporting (Sentry)
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_SENTRY_DSN=

# Session Replay
NEXT_PUBLIC_ENABLE_SESSION_REPLAY=false
NEXT_PUBLIC_SESSION_REPLAY_PROVIDER=none
# Options: hotjar,fullstory,clarity,none
NEXT_PUBLIC_SESSION_REPLAY_SITE_ID=
NEXT_PUBLIC_SESSION_REPLAY_API_KEY=

# Logging
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_LOG_LEVEL=info
# Options: debug,info,warn,error,critical
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=false
NEXT_PUBLIC_LOGGING_ENDPOINT=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# AIAS Edge Studio Integration
# URL for AIAS Edge Studio (external service for Edge AI model optimization)
NEXT_PUBLIC_AIAS_STUDIO_URL=https://aias.studio
