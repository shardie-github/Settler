# NPM Configuration for Settler Monorepo
# Ensures consistent dependency resolution across all packages

# Use the latest package-lock format
package-lock=true

# Prefer exact versions for workspace dependencies
save-exact=false

# Don't install optional dependencies that cause warnings
optional=false

# Use npm's legacy peer deps handling for better compatibility
legacy-peer-deps=false

# Enable audit for security
audit=true

# Set engine-strict to warn but not fail on engine mismatches
engine-strict=false
