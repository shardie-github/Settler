{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": [
        "NODE_ENV",
        "REDIS_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "QSTASH_TOKEN",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "SUPABASE_ANON_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_JWT_SECRET",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_VERCEL_LOG_DRAIN_URL",
        "SENTRY_OTLP_TRACES_URL",
        "SENTRY_PUBLIC_KEY",
        "RESEND_API_KEY",
        "RESEND_FROM_EMAIL",
        "RESEND_FROM_NAME",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "REDIS_TLS",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_ENABLE_SENTRY",
        "NEXT_PUBLIC_ANALYTICS_PROVIDERS",
        "NEXT_PUBLIC_ANALYTICS_ENDPOINT",
        "NEXT_PUBLIC_ANALYTICS_TOKEN",
        "NEXT_PUBLIC_SESSION_REPLAY_PROVIDER",
        "NEXT_PUBLIC_ENABLE_SESSION_REPLAY",
        "NEXT_PUBLIC_SESSION_REPLAY_SITE_ID",
        "NEXT_PUBLIC_SESSION_REPLAY_API_KEY",
        "NEXT_PUBLIC_AIAS_STUDIO_URL",
        "NEXT_PUBLIC_ENABLE_CONSOLE_LOGS"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": [
        "NODE_ENV",
        "REDIS_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "QSTASH_TOKEN",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "SUPABASE_ANON_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_JWT_SECRET",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_VERCEL_LOG_DRAIN_URL",
        "SENTRY_OTLP_TRACES_URL",
        "SENTRY_PUBLIC_KEY",
        "RESEND_API_KEY",
        "RESEND_FROM_EMAIL",
        "RESEND_FROM_NAME",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "REDIS_TLS",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_ENABLE_SENTRY",
        "NEXT_PUBLIC_ANALYTICS_PROVIDERS",
        "NEXT_PUBLIC_ANALYTICS_ENDPOINT",
        "NEXT_PUBLIC_ANALYTICS_TOKEN",
        "NEXT_PUBLIC_SESSION_REPLAY_PROVIDER",
        "NEXT_PUBLIC_ENABLE_SESSION_REPLAY",
        "NEXT_PUBLIC_SESSION_REPLAY_SITE_ID",
        "NEXT_PUBLIC_SESSION_REPLAY_API_KEY",
        "NEXT_PUBLIC_AIAS_STUDIO_URL",
        "NEXT_PUBLIC_ENABLE_CONSOLE_LOGS"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
